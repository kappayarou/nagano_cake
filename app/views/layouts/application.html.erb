<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/39ac851a56.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="border-bottom border-secondary pb-3">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navber-nav ml-auuto text-left">
              <li><%= image_tag 'rails_sample.png', size: "200x50", class:"header-icon" %></li>
            </ul>
            <ul class="navbar-nav ml-auto text-right">
              <% if admin_signed_in? %>
                <li><%= link_to "商品一覧", admin_items_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "会員一覧", admin_customers_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "注文履歴一覧", admin_root_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "ジャンル一覧", admin_genres_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-link text-dark border border-dark ml-4" %></li>
              <% elsif customer_signed_in? %>
                <li><%= link_to "マイページ", customers_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "商品一覧", items_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "カート", cart_items_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"nav-link text-dark border border-dark ml-4" %></li>
              <% else %>
                <li><%= link_to "アバウト", about_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "商品一覧", items_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "新規登録", new_customer_registration_path, class:"nav-link text-dark border border-dark ml-4" %></li>
                <li><%= link_to "ログイン", new_customer_session_path, class:"nav-link text-dark border border-dark ml-4" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="border-top border-secondary pb-3 footer-property">
      <div class="foot"></div>
    </footer>
  </body>
</html>
