<div class="container">


    <h4 class="sign-in-title">管理者ログイン</h4>
    <br>

    <div class="sign-in-form">
      <%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
        <div class="row">
          <div class="col-md-2">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-md-2">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="col-md-6">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>
        </div>

        <br>

        <div class="row sign-in-button">
          <div class="col-md-6">
            <div class="actions">
              <%= f.submit "ログイン", class:"btn btn-primary admin-button" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>

</div>