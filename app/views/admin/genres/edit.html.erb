<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="genre-title">ジャンル編集</h4>
      <br>
      <%= form_with model: @genre, url: admin_genres_path, class:"genre", local:true do |f| %>
        <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name, class:"genre-create" %>
        <%= f.submit '変更を保存', class:"genre-create btn btn-success btn-lg" %>
      <% end %>
    </div>
  </div>
</div>