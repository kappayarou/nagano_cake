<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="genre-title">ジャンル一覧・追加</h4>
      <br>
      <%= form_with model: @genre, url: admin_genres_path, class:"genre", local:true do |f| %>
        <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name, class:"genre-create" %>
        <%= f.submit '新規登録', class:"genre-create btn btn-success btn-lg" %>
      <% end %>
    </div>
  </div>

  <div class="genre-create-all">
    <div class="row">
      <div class="col-md-4">
        <table class="table table-hover table-inverse">
          <thead class="table-secondary">
            <tr>
              <th colspan="4"=>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td colspan="3"><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"genre-edit btn btn-success w-50 h-25" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>