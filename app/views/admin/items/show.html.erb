<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4 class="item-show-title">商品詳細</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %><br>
    </div>
    <div class="col-md-8">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td>商品名：</td>
            <td><%= @item.name %></td>
          </tr>
          <td>商品説明：</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル：</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <td>税込価格<br>（税抜価格）:</td>
            <td><%= number_with_delimiter (@item.price * @tax_rate).to_i %>（<%= number_with_delimiter @item.price %>）円</td>
          </tr>
          <td>販売ステータス：</td>
          <td class="text-success font-weight-bold h5">
            <% if @item.is_active %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class:"item-show-edit btn btn-success btn-lg" %>
    </div>
  </div>
</div>