<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mt-4">商品一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>ジャンル</th>
            <th>作成日</th>
            <th>更新日</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= item.updated_at.strftime('%Y/%m/%d') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>