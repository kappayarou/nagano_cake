<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto create">
      <h4 class="item-create-title">商品新規登録</h4>
      <%= form_with model: @item, url: admin_items_path, class:"item-create", local:true do |f| %>
        <label for="item_image", class="create">商品画像　　　　</label>
        <%= f.attachment_field :image %><br>
        <label for="item_name", class="create">商品名　　　　　</label>
        <%= f.text_field :name %><br>
        <label for="item_introduction", class="create">商品説明　　　　</label>
        <%= f.text_area :introduction %><br>
        <label for="item_genre_id", class="create">ジャンル　　　　</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
        <label for="item_price", class="create">値段　　　　　　</label>
        <%= f.text_field :price %>円<br>
        <label for="item_is_active", class="create">販売ステータス　</label>
        <%= f.radio_button :is_active, :true, checked: true %><%= " 販売中" %>
        <%= f.radio_button :is_active, :false %><%= " 販売停止中" %><br>
        <%= f.submit '新規登録', class:"create btn btn-success  btn-lg w-25 create-button" %>
      <% end %>
    </div>
  </div>
</div>