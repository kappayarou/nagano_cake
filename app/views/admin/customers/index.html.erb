<div class="container">
  <div class="row">
    <h5>会員一覧</h5>
    <div class="col-md-12">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>姓　名</th>
            <th>セイ　メイ</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
            <th>作成日</th>
            <th>更新日</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.last_name %>　<%= customer.first_name %></td>
              <td><%= customer.last_name_kana %>　<%= customer.first_name_kana %></td>
              <td><%= customer.email %></td>
              <% if !customer.is_active %>
                <td>退会</td>
              <% else %>
                <td>有効</td>
              <% end %>
              <td><%= customer.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= customer.updated_at.strftime('%Y/%m/%d') %></td>
              <td><%= link_to '詳細', admin_customer_path(customer.id)  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>