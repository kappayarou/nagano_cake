<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="customer-new-title">新規会員登録</h4>
    </div>
    <div class="col-md-9"></div>
  </div>

  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>
          <table class="table table-noborder">
            <tbody>
              <tr>
                <td>名前</td>
                <td>
                  <div class="field">
                    <%= f.label :last_name, "(姓)"%>
                    <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class:"ml-3" %>
                  </div>
                </td>
                <td>
                  <div class="field">
                    <%= f.label :first_name, "(名)" %>
                    <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class:"ml-3" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>フリガナ</td>
                <td>
                  <div class="field">
                    <%= f.label :last_name_kana, "(セイ)" %>
                    <%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ" %>
                  </div>
                </td>
                <td>
                  <div class="field">
                    <%= f.label :first_name_kana, "(メイ)" %>
                    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>メールアドレス</td>
                <td>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class:"ml-5" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>郵便番号(ハイフンなし)</td>
                <td>
                  <div class="field">
                    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class:"ml-5" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>住所</td>
                <td colspan="2">
              <div class="field">
                  <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"ml-5 customer-address-form" %>
                </div>
                </td>
              </tr>

              <tr>
                <td>電話番号(ハイフンなし)</td>
                <td>
                  <div class="field">
                    <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class:"ml-5" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>パスワード(6文字以上)</td>
                <td>
                  <div class="field">
                    <%= f.password_field :password, class:"ml-5" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td>パスワード(確認用)</td>
                <td>
                  <div class="field">
                    <%= f.password_field :password_confirmation, class:"ml-5" %>
                  </div>
                </td>
              </tr>

              <tr>
                <td></td>
                <td>
                  <div class="actions">
                    <%= f.submit "新規登録", class:"ml-5 btn btn-success customer-sign-up" %>
                  </div>
                </td>
              </tr>

            </tbody>
          </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h4 class="customer-new-link-title">既に登録済みの方</h4>
    </div>
    <div class="col-md-8"></div>
  </div>
  <div class="row">
    <div class="col-md-5 customer-new-link">
        <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </div>
  </div>
</div>
